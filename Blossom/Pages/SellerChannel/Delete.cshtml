@page "{id}"
@model Blossom.Pages.SellerChannel.DeleteModel
@{
    ViewData["Title"] = "Delete Flower Listing";
}

<h2>Delete Flower Listing</h2>

<div>
    <h4>Are you sure you want to delete this flower listing?</h4>
    <p><strong>Name:</strong> @Model.FlowerListing.Name</p>
    <p><strong>Price:</strong> @Model.FlowerListing.Price.ToString("N0")₫</p>
    <form method="post">
        <input type="hidden" asp-for="FlowerListing.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/SellerChannel/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
