@page
@model Blossom.Pages.SellerChannel.IndexModel
@using BusinessObjects.Entities.Enums

@if (TempData["CreateSuccessMessage"] != null)
{
    <script type="text/javascript">
        toastr.success('@TempData["CreateSuccessMessage"]');
    </script>
}

<h2 class="my-5">Flower Listings for Seller</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-page="/SellerChannel/Create" class="btn btn-success">
        <i class="fas fa-plus"></i> Thêm sản phẩm mới
    </a>
</div>

@if (Model.FlowerListings != null && Model.FlowerListings.Any())
{
    <div class="card w-100 mb-5">
        <div class="card-body">
            <h4 class="primary-color">Product Management</h4>

            <div class="col-12 d-flex align-items-center justify-content-center mb-5 mt-3"></div>
            <div class="table-responsive mt-20">
                <table class="table table-striped w-100 text-nowrap">
                    <thead>
                        <tr>
                            <th class="fw-bold primary-color">Image</th>
                            <th class="fw-bold primary-color">Name</th>
                            <th class="fw-bold primary-color">Category</th>
                            <th class="fw-bold primary-color">Price</th>
                            <th class="fw-bold primary-color">Stock Quantity</th>
                            <th class="fw-bold primary-color">Status</th>
                            <th class="fw-bold primary-color">Actions</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var flower in Model.FlowerListings)
                        {
                            <tr>
                                <td>
                                    <a href="@flower.ImageUrl">
                                        <img class="rounded" width="50px" height="50px" src="@flower.ImageUrl" alt="@flower.Name" />
                                    </a>
                                </td>
                                <td>
                                    <p class="mb-0 fw-bold">@flower.Name</p>
                                </td>
                                <td>
                                    <div class="fw-bold">@flower.Category.Name</div>
                                </td>
                                <td>
                                    <p class="fw-bold mb-0">@flower.Price.ToString("N0")₫</p>
                                </td>
                                <td>
                                    <p class="fw-bold mb-0">@flower.StockQuantity</p>
                                </td>
                                <td>
                                    <p class="fw-bold mb-0 @(flower.Status == FlowerListingStatus.APPROVED ? "text-success" : "text-warning")">
                                        @flower.Status
                                    </p>
                                </td>
                                <td>
                                <td>
                                    <a asp-page="Edit" asp-route-id="@flower.Id" class="btn btn-primary">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <a asp-page="Delete" asp-route-id="@flower.Id" class="btn btn-danger">
                                        <i class="fas fa-trash"></i> Remove
                                    </a>
                                </td>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <p>No flowers found for this seller.</p>
}
